{{ func normalize_for_table(value) }}
    {{- text = "" + value -}}
    {{ ret string.replace(string.replace(text, "\r", ""), "\n", " ") }}
{{ end }}

{{ func format_role_value(attr, value, scope, role, principal, for_table) }}
    {{ func safe(text) }}
        {{ if text == null }}{{ ret "" }}{{ end }}
        {{ ret escape_markdown(text) }}
    {{ end }}

    {{ func wrap_code(text) }}
        {{ cleaned = safe(text) }}
        {{ if cleaned == "" }}{{ ret "" }}{{ end }}
        {{ ret "`" + cleaned + "`" }}
    {{ end }}

    {{ if attr == "scope" }}
        {{ if scope.resource_group != "" && scope.subscription_id != "" }}
            {{ ret wrap_code(scope.resource_group) + " in subscription " + wrap_code(scope.subscription_id) }}
        {{ end }}
        {{ if scope.summary_name != "" }}
            {{ ret scope.summary_label + " " + wrap_code(scope.summary_name) }}
        {{ end }}
        {{ if scope.details != "" }}{{ ret safe(scope.details) }}{{ end }}
        {{ ret "" }}
    {{ end }}

    {{ if attr == "role_definition_id" }}
        {{ roleName = role.name != "" ? format_attribute_value_table("role_definition_name", role.name, null) : "" }}
        {{ roleId = role.id != "" ? format_code_table(role.id) : "" }}
        {{ if roleName == "" && roleId == "" }}{{ ret "" }}{{ end }}
        {{ if roleId == "" }}{{ ret roleName }}{{ end }}
        {{ if roleName == "" }}{{ ret roleId }}{{ end }}
        {{ ret roleName + " (" + roleId + ")" }}
    {{ end }}

    {{ func principal_icon(principal_type) }}
        {{- if principal_type == "User" }}{{ ret "üë§" }}{{ end -}}
        {{- if principal_type == "Group" }}{{ ret "üë•" }}{{ end -}}
        {{- if principal_type == "ServicePrincipal" }}{{ ret "üíª" }}{{ end -}}
        {{ ret "" }}
    {{ end }}

    {{ if attr == "principal_id" }}
        {{ icon = principal_icon(principal.type) }}
        {{ nameValue = principal.name != "" ? format_code_table(icon + "¬†" + principal.name) : "" }}
        {{ principalType = principal.type != "" ? format_attribute_value_table("principal_type", principal.type, null) : "" }}
        {{ idValue = principal.id != "" ? "[" + format_code_table(principal.id) + "]" : "" }}
        {{ text = nameValue }}
        {{ if principalType != "" }}{{ text = text + " (" + principalType + ")" }}{{ end }}
        {{ if idValue != "" }}{{ text = text + " " + idValue }}{{ end }}
        {{ ret text }}
    {{ end }}

    {{ if attr == "principal_type" && value != null }}
        {{ ret format_attribute_value_table("principal_type", "" + value, null) }}
    {{ end }}

    {{ if attr == "role_definition_name" && value != null }}
        {{ ret format_attribute_value_table("role_definition_name", "" + value, null) }}
    {{ end }}

    {{ if value == null }}{{ ret "" }}{{ end }}
    {{ ret wrap_code("" + value) }}
{{ end }}

